{
  "title": "API Performance",
  "uid": "api-performance",
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "Request Rate (req/sec)",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (route)",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Response Time Percentiles",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, route))",
          "legendFormat": "p50 {{route}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, route))",
          "legendFormat": "p95 {{route}}",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, route))",
          "legendFormat": "p99 {{route}}",
          "refId": "C"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Error Rate by Endpoint",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{statusCode=~\"5..\"}[5m])) by (route) / sum(rate(http_requests_total[5m])) by (route)",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Status Codes Distribution",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m])) by (statusCode)",
          "legendFormat": "{{statusCode}}",
          "refId": "A"
        }
      ]
    }
  ]
}
